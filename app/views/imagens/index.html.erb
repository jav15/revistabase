<p id="notice"><%= notice %></p>

<h1>Imagens</h1>

<table>
  <thead>
    <tr>
      <th>Imagen</th>
      <th>Position</th>
      <th>Post</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @imagens.each do |imagen| %>
      <tr>
        <td><%= image_tag imagen.picture.medium.url, class: 'img-thumbnail img-fluid rounded' %></td>
        <td><%= imagen.position %></td>
        <td><%= imagen.post_id %></td>
        <td><%= link_to 'Show', imagen %></td>
        <td><%= link_to 'Edit', edit_imagen_path(imagen) %></td>
        <td><%= link_to 'Destroy', imagen, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Imagen', new_imagen_path %>
